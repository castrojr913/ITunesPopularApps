<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jacr.gravityapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GravityApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.splash.view.SplashActivity_">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.navigation.view.MainDrawerActivity_" />
        <activity android:name=".controllers.catalog.view.CatalogItemDetailActivity_" />

    </application>

</manifest>
