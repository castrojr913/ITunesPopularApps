<?xml version="1.0" encoding="utf-8"?>
<com.jacr.gravityapp.utilities.views.ScrollableSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/catalog_layout_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/catalog_recyclerview_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />

        <include
            android:id="@+id/catalog_view_no_items"
            layout="@layout/catalog_view_no_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <include
            android:id="@+id/catalog_progressbar"
            layout="@layout/view_progressbar_circular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

    </RelativeLayout>

</com.jacr.gravityapp.utilities.views.ScrollableSwipeRefreshLayout>